{
	"include": ["src"],
	"compilerOptions": {
		// Modules
		"module": "CommonJS",
		"moduleResolution": "Node",
		"esModuleInterop": true,

		// Output
		"outDir": "./lib",
		"target": "ES2020",
		"declaration": true,
		"sourceMap": true,
		"inlineSources": true,

		// Lint
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,

		// Optimization
		"skipLibCheck": true
	}
}
